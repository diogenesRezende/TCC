package br.edu.univas.restapiapp.services;

import javax.ws.rs.Consumes;
import javax.ws.rs.GET;
import javax.ws.rs.Path;
import javax.ws.rs.Produces;
import javax.ws.rs.core.MediaType;

import br.edu.univas.restapiapp.controller.AlunoCtrl;
import br.edu.univas.restapiapp.controller.EventosCtrl;
import br.edu.univas.restapiapp.entities.Alunos;
import br.edu.univas.restapiapp.entities.Eventos;

@Path("/alunos")
@Produces({ MediaType.APPLICATION_JSON })
@Consumes({ MediaType.APPLICATION_JSON })
public class AlunosService {

	@GET
	@Produces( MediaType.APPLICATION_JSON )
	public Alunos getAllAlunos() {

		Alunos alunos = new Alunos();
		AlunoCtrl ctrl = new AlunoCtrl();
		alunos.setAlunos(ctrl.getAll());

		return alunos;
	}

	@GET
	@Path("/eventos")
	@Produces( MediaType.APPLICATION_JSON )
	public Eventos getAllEventos() {

		Eventos eventos = new Eventos();
		EventosCtrl ctrl = new EventosCtrl();
		eventos.setEventos(ctrl.getAll());

		return eventos;
	}

}
